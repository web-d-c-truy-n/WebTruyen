                let daduyet = await API.XetDuyetTG(userid)
                if (daduyet == true) {

                    alert("Đã duyệt tác giả")
                }
            })
            $(".thongtin").click(async function () {
                let userid = $(this).attr("iduser")
                let thongtin = await API.LayThongTinTG(userid)
                $(".butdanh").text(thongtin.ButDanh);
                $(".ngaydangki").text(thongtin.NgayDangKy);
                $(".vaitro").text(vaitroTg(thongtin.VaiTro));
                $(".daduyet").text(thongtin.DaDuyet ? "Đã duyệt" : "Chưa duyệt");
                let thongtintk = await API.layTTTaiKhoan(thongtin.MaTK)
                $("#hoten").text(thongtintk.HovaTen);
                $("#mail").text(thongtintk.Mail);
                $("#sdt").text(thongtintk.SDT);
                $("#ngaytao").text(thongtintk.NgayTao);
                $("#tinhtrang").text(tinhTrangTK(thongtintk.TinhTrang));
            })

        })
    </script>
