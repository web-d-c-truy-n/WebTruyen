@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaTG)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaTK)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ButDanh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayDangKy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VaiTro)
        </td>
        <td id="daduyet">
            @Html.DisplayFor(modelItem => item.DaDuyet)
        </td>
        <td>
            <div class="dropdown">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    @Html.ActionLink("Xét duyệt", "Edit", new { id = item.MaTK }) |
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item xetduyet" href="#" iduser="@item.MaTG">Duyệt</a>
                </div>
            </div>
            <div>
                <button type="button" class="btn btn-default thongtin" data-toggle="modal" data-target="#myModal" iduser="@item.MaTG">
                    <a href="#">Chi tiết</a>
                </button>
            </div>
            <div>
                <button type="button" class="btn btn-default xoaTK" iduser="@item.MaTG">
                    <a href="#">Xóa</a>
                </button>
            </div>
        </td>
    </tr>
}

