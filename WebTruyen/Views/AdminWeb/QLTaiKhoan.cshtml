@model IEnumerable<WebTruyen.Models.TaiKhoan>

@{
    ViewBag.Title = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdminWeb.cshtml";
}
<table class="table">
    <thead>
        <tr>
            <th>
                Mã Tài Khoản
            </th>
            <th>
                Họ và Tên
            </th>
            <th>
                Mail
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Tình trạng
            </th>
            <th>
                Ngày khóa
            </th>
            <th></th>
        </tr>        
    </thead>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaTK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HovaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayTao)
            </td>
            <td class="tinhtrang">
                @{
                    switch (item.TinhTrang)
                    {
                        case 1:
                            @("Khóa 30 phút")
                            break;
                        case 2:
                            @("Khóa 60 phút")
                            break;
                        case 3:
                            @("Khóa vĩnh viễn")
                            break;
                        case 0:
                            @("Hoạt động")
                            break;
                    }
                }

            </td>


            <td>
                @Html.DisplayFor(modelItem => item.NgayKhoa)
            </td>


            <td>
                <div class="dropdown">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Edit
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="#" iduser="@item.MaTK" tinhtrang="1">Khóa 30 phút</a>
                        <a class="dropdown-item" href="#" iduser="@item.MaTK" tinhtrang="2">Khóa 60 phút</a>
                        <a class="dropdown-item" href="#" iduser="@item.MaTK" tinhtrang="3">Khóa vĩnh viễn</a>
                        <a class="dropdown-item" href="#" iduser="@item.MaTK" tinhtrang="0">Hoạtđộng</a>
                    </div>
                </div>
                <div>
                    <button type="button" class="btn btn-default thongtin" data-toggle="modal" data-target="#myModal" iduser="@item.MaTK">
                        <a href="#">Details</a>
                    </button>


                </div>
                <div>
                    <button type="button" class="btn btn-default xoaTK" iduser="@item.MaTK">
                        <a href="#">Delete</a>
                    </button>
                </div>
            </td>
        </tr>
    }
</table>
