
@{
    ViewBag.Title = "ThemAdmin";
    Layout = "~/Views/Shared/_LayoutLoginAdmin.cshtml";
}
<div class="register-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <a href="#" class="h1"><b>Admin</b>LTE</a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Đăng kí Admin</p>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Name" id="HovaTen">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="User name" id="username">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-user"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="password" class="form-control" placeholder="Password" id="password">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <div id="thongbao" class="text-danger"></div>
            <div class="row">
                <div class="col-8">
                    <a href="@Url.Action("LoginAdmin","Login")" class="text-center">Đã là Admin - mời đăng nhập</a>
                </div>
                <!-- /.col -->
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block" id="dkadmin">Đăng kí</button>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
@section js{
    <script src="~/Scripts/getAPI.js"></script>
    <script>
        $(document).ready(function () {
            $("#dkadmin").click(async function () {
                debugger
                let HovaTen = $("#HovaTen").val()
                let username = $("#username").val()
                let password = ($("#password").val())
                let dkadmin = await API.RegisterAdmin(HovaTen, username, password)                
                $("#thongbao").text(dkadmin.msg)
            })
        })
    </script>
}

